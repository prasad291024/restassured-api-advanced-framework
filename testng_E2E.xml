<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API E2E Test Suite" verbose="1" parallel="methods" thread-count="2">
    <listeners>
        <listener class-name="com.prasad_v.retry.RetryListener"/>
        <listener class-name="com.prasad_v.listeners.TestExecutionListener"/>
    </listeners>

    <!-- This test suite includes two test classes:
         TestE2EFlow_01.java and TestE2EFlow_02.java
    -->
    <test name="Booking E2E Tests">
        <packages>
            <package name="com.prasad_v.tests.integration">
                <classes>
                    <!-- First End-to-End test: Create -> Update -> Delete -->
                    <class name="com.prasad_v.tests.integration.TestE2EFlow_01"/>

                    <!-- Second E2E test: Create -> Delete -> Verify Deletion -->
                    <class name="com.prasad_v.tests.integration.TestE2EFlow_02"/>
                </classes>
            </package>
        </packages>
    </test>

</suite>
